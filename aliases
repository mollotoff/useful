# GENERAL
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
alias lsla='ls -la'
alias h='history'

# KUBERNETES
alias k='kubectl'
alias kns='kubens'
alias kx='kubectx'
alias kg='kubectl get'
alias kgp='kubectl get pods'
alias kgn='kubectl get nodes'
alias kgpw='kubectl get pods -o wide'
alias kgpa='kubectl get pods --all-namespaces'
alias kgpaw='kubectl get pods --all-namespaces -o wide'
alias kga='kubectl get all'
alias kdp='kubectl describe pod'
alias kdn='kubectl describe node'
alias kgd='kubectl get deployment'
alias kgsv='kubectl get service'
alias kgsc='kubectl get secret'
alias ktopp='kubectl top pods'
alias ktoppa='kubectl top pods --all-namespaces'
alias ktopn='kubectl top nodes'
alias kd='kubectl delete'
alias kdelp='kubectl delete pod'
alias kgaa='kubectl get all --all-namespaces'

# DOCKER
alias dk='docker'
alias dki='docker images'
alias dkt='docker tag'
alias dkpull='docker pull'
alias dkpush='docker push'
alias dkload='docker load <'
alias dkremoveall='docker rmi -f $(docker images -a -q)'
alias dkrmi='docker rmi -f'
